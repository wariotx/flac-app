<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_window_focused="false" android:state_enabled="true"
      android:color="@color/button_label_normal"
    />

  <item android:state_window_focused="false" android:state_enabled="false"
      android:color="@color/button_label_normal_disable"
    />

  <item android:state_pressed="true"
      android:color="@color/button_label_pressed"
    />

  <item android:state_focused="true" android:state_enabled="true"
      android:color="@color/button_label_selected"
    />

  <item android:state_enabled="true"
      android:color="@color/button_label_normal"
    />

  <item android:color="@color/button_label_normal_disable"
    />

</selector>
